{% schema %}
  {
    "name": "Contact",
    "settings": [
      {
        "id": "title1",
        "type": "text",
        "label": "Title 1"
      },
      {
        "id": "email1",
        "type": "text",
        "label": "Email 1"
      },
      {
        "id": "title2",
        "type": "text",
        "label": "Title 2"
      },
      {
        "id": "email2",
        "type": "text",
        "label": "Email 2"
      }
    ]
  }
{% endschema %}


<div class="section u-flex u-mFlexWrap">
  <div class="u-bgMainBlue u-width50 t-center u-vPad180 u-mvPad100">
    <h3 class="t-sectionTitleSmall u-mb25">{{ section.settings.title1 }}</h3>
    <div class="u-mb10"><a class="t-bodyLarge t-hoverUnderline t-hoverUnderline--medium" href="mailto:{{ section.settings.email1 }} ">{{ section.settings.email1 }}</a></div>

  </div>
  <div class="u-bgLightBlue t-colorMainBlue u-width50 t-center u-vPad180 u-mvPad100">
    <h3 class="t-sectionTitleSmall u-mb25">{{ section.settings.title2 }}</h3>
    <div class="u-mb50"><a class="t-bodyLarge t-hoverUnderline t-hoverUnderline--medium t-hoverUnderline--blue" href="mailto:{{ section.settings.email2 }}">{{ section.settings.email2 }}</a></div>
  </div>
</div>
